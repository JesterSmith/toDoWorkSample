@model ToDo.Models.ToDoItem
@{
    ViewBag.Title = "Update Task";
}

<div class="jumbotron">
    <h1>Update - @Model.Title</h1>
</div>

<div class="row">
    @using (Html.BeginForm("UpdateTask", "Update", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.ID)
        @Html.HiddenFor(x => x.Priority)
    <div class="row td-row">
        <div class="col-md-1 col-sm-6">@Html.Label("Task Title")</div>
        <div class="col-md-4 col-sm-6 ">@Html.TextBoxFor(x => x.Title)</div>
        <div class="col-md-1 col-sm-6">@Html.Label("Task Description")</div>
        <div class="col-md-4">@Html.TextAreaFor(x => x.Description, new { @cols = 50, @rows = 5 })</div>
        <div class="col-md-1 col-sm-6">@Html.Label("Task Status")</div>
        <div class="col-md-1 col-sm-6">
            @Html.DropDownListFor(x => x.Status, Enum.GetValues(typeof(ToDo.Models.ToDoItem.Progress)).Cast<ToDo.Models.ToDoItem.Progress>().Select(v => new SelectListItem
   {
       Text = v.ToString(),
       Value = ((int)v).ToString()
   }).ToList())
        </div>
    </div>

    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-2"><input class="button" type="submit" value="Update" name="Update" /></div>
        <div class="col-md-5"></div>
    </div>
}

</div>
