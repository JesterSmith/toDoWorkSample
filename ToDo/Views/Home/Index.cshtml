@model ToDo.Models.HomeModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ToDo List</h1>
</div>

<div class="row">
            @for(int i = 0; i < Model.TdList.Count; i++)
            {
            <div class="row td-row">
                <div class="col-md-3 item-title">@Model.TdList[i].Title</div>
                <div class="col-md-8 item-desc">@Model.TdList[i].Description</div>
                <div class="col-md-1">@Html.CheckBoxFor(m => m.TdList[i].Completed)</div>
            </div>
            }
</div>